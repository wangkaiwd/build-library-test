{
  "devDependencies": {
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.2.0",
    "husky": "^6.0.0"
  },
  "scripts": {
    "cm": "cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "( exec < /dev/tty && git cz --hook --hook ) || true 2> /dev/null"
    }
  }
}
